extends ../template

block content
  section.section
    .container
      h1.title= examen.title
        small.is-size-6.has-text-grey-light.is-pulled-right Posted #{examen.dateAdded}
      
      hr
      audio.examen-audio.is-marginless(controls)
      hr
      
      nav.breadcrumb.is-centered(aria-label="breadcrumbs")
        ul
          li.is-active
            a(href="#introduction") Introduction
          li
            a(href="#prompt-1") Prompt 1
          li
            a(href="#prompt-2") Prompt 2
          li
            a(href="#prompt-3") Prompt 3
          li
            a(href="#prompt-4") Prompt 4
      .prompts
        #introduction.content.is-active
          p= examen.introduction
        #prompt-1.content
          p 1
        #prompt-2.content
          p 2
        #prompt-3.content
          p 3
        #prompt-4.content
          p 4